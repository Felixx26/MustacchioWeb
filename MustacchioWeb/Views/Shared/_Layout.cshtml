<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Mustacchio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="container my-5">
            <div class="text-center">
                <img src="~/LocalResources/logo.jpg" alt="Alternate Text" />
            </div>
        </div>
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bg-white justify-content-center">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link font-weight-bold" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link font-weight-bold" })</li>
                    <li class="nav-item">@Html.ActionLink("Gallery", "Gallery", "Home", null, new { @class = "nav-link font-weight-bold" })</li>
                    <li class="nav-item">@Html.ActionLink("Blog", "Blog", "Home", null, new { @class = "nav-link font-weight-bold" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link font-weight-bold" })</li>
                </ul>
            </nav>
        </div>
    </header>
    @RenderBody()
    <footer class="bg-dark text-white py-4">
        <div class="container px-5">
            <div class="px-5">
                <div class="px-5 clearfix">
                    <div class="float-left">
                        <p>&copy; 2023 by Mustacchio. All rights reserved.</p>
                    </div>
                    <div class="float-right">
                        <a class="mx-4 contenedor" href="https://twitter.com">
                            <img src="~/LocalResources/icons/icon-twitter-hover.jpg" alt="Alternate Text" />
                            <img class="top" src="~/LocalResources/icons/icon-twitter.jpg" alt="Alternate Text" />
                        </a>
                        <a class="mx-4 contenedor" href="https://www.facebook.com">
                            <img src="~/LocalResources/icons/icon-facebook-hover.jpg" alt="Alternate Text" />
                            <img class="top" src="~/LocalResources/icons/icon-facebook.jpg" alt="Alternate Text" />
                        </a>
                        <a class="mx-4 contenedor" href="https://plus.google.com">
                            <img src="~/LocalResources/icons/icon-googleplus-hover.jpg" alt="Alternate Text" />
                            <img class="top" src="~/LocalResources/icons/icon-googleplus.jpg" alt="Alternate Text" />
                        </a>
                        <a class="mx-4 contenedor" href="http://www.pinterst.com">
                            <img src="~/LocalResources/icons/icon-pinterest-hover.jpg" alt="Alternate Text" />
                            <img class="top" src="~/LocalResources/icons/icon-pinterest.jpg" alt="Alternate Text" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
